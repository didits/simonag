<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/primary"
        app:indicatorName="BallPulseIndicator" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <TextView
                android:id="@+id/nama_program"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Lorem Ipsum"
                android:textStyle="bold" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">

                <TableRow android:background="#5c909f">

                    <TextView
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Aktivitas"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Real/Target"
                        android:textColor="@color/colorWhite" />
                </TableRow>

                <TableRow android:background="@color/colorAbuAbu">

                    <LinearLayout
                        android:layout_marginLeft="3px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3px"
                        android:layout_marginRight="3px"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/nama_aktivitas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Penambahan bandwith selular" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/due_Date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight="1"
                                android:text="Last update: 30 June 2017"
                                android:textColor="#0a819f"
                                android:textSize="10sp"
                                android:textStyle="italic" />


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="3px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3px"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <HorizontalScrollView
                            android:layout_weight="1"
                            android:scrollbars="none"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/target"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="20/200Gbs" />

                            <FrameLayout
                                android:layout_width="3px"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                android:background="@color/colorAbuAbu" />

                            <TextView
                                android:id="@+id/revenue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="20/200Gbs" />

                            <FrameLayout
                                android:id="@+id/pemisah"
                                android:layout_width="3px"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                android:background="@color/colorAbuAbu" />

                            <TextView
                                android:id="@+id/realisasi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="80%" />
                        </LinearLayout>
                        </HorizontalScrollView>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#0a819f"
                            android:paddingBottom="3px"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingTop="3px">

                            <TextView
                                android:id="@+id/tipe_aktivitas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10 aktivitas"
                                android:textColor="@color/colorWhite"
                                android:textSize="10sp" />
                        </FrameLayout>
                    </LinearLayout>
                </TableRow>

            </TableLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Tanggal" />

            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text"
                android:padding="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="@dimen/text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Nilai Realisasi" />

            <EditText
                android:id="@+id/et_nilai"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text"
                android:inputType="number"
                android:padding="@dimen/padding"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_revenueRealisasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Revenue Realisasi" />

            <EditText
                android:id="@+id/et_revenue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text"
                android:inputType="number"
                android:padding="@dimen/padding"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/button"
                android:text="TAMBAH"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>