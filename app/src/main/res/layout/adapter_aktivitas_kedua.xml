<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="2">

    <TableRow android:background="#5c909f">

        <TextView
            android:gravity="center"
            android:padding="3dp"
            android:text="No"
            android:textColor="@color/colorWhite" />

        <TextView
            android:gravity="center"
            android:padding="3dp"
            android:text="Aktivitas"
            android:textColor="@color/colorWhite" />

        <TextView
            android:gravity="center"
            android:padding="3dp"
            android:text="Real/Target"
            android:textColor="@color/colorWhite" />
    </TableRow>

    <TableRow
        android:background="@color/colorAbuAbu"
        >

        <TextView
            android:layout_marginBottom="2px"
            android:layout_marginRight="2px"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:padding="3dp"
            android:text="1" />

        <LinearLayout
            android:layout_marginBottom="2px"
            android:layout_marginRight="2px"
            android:background="@color/colorWhite"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Penambahan bandwith selular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/last_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Last update: 30 June 2017"
                    android:textColor="#0a819f"
                    android:textSize="10sp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:id="@+id/tv_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/rounded_info" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/edit_black" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/delete" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="2px"
            android:background="@color/colorWhite"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/200Gbs" />

                <FrameLayout
                    android:layout_margin="3dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAbuAbu" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/200Gbs" />

                <FrameLayout
                    android:layout_margin="3dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAbuAbu" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80%" />
            </LinearLayout>

            <FrameLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0a819f"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp">

                <TextView
                    android:id="@+id/total_aktivitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 aktivitas"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />
            </FrameLayout>
        </LinearLayout>
    </TableRow>

</TableLayout>
